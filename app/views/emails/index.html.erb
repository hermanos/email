<h1>Listing emails</h1>

<table>
  <tr>
    <th>User</th>
    <th>Folder</th>
    <th>Msg</th>
    <th>From</th>
    <th>To</th>
    <th>Cc</th>
    <th>Bcc</th>
    <th>Subject</th>
    <th>Content</th>
    <th>Languate</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.user_id %></td>
    <td><%= email.folder %></td>
    <td><%= email.msg_id %></td>
    <td><%= email.from %></td>
    <td><%= email.to %></td>
    <td><%= email.cc %></td>
    <td><%= email.bcc %></td>
    <td><%= email.subject %></td>
    <td><%= email.content %></td>
    <td><%= email.languate %></td>
    <td><%= email.status %></td>
    <td><%= link_to 'Show', email %></td>
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

